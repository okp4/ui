root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml,json}]
trim_trailing_whitespace = false
indent_size = 2

[*.scss]
trim_trailing_whitespace = false
indent_size = 2
